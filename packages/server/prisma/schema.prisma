generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String
  role          Role     @default(agent)
  agencyId      String? 
  permissions   Json?
  createdAt     DateTime @default(now())
  lastLogin     DateTime?
  Agency        Agency?  @relation(fields: [agencyId], references: [id])
  refreshTokens RefreshToken[]
}

model Agency {
  id             String  @id @default(uuid())
  name           String
  ownerId        String
  subscription   String?
  settings       Json?
  createdAt      DateTime @default(now())
  users          User[]  
}

model Lead {
  id          String   @id @default(uuid())
  firstName   String?
  lastName    String?
  email       String?
  address     String?
  age         Int?
  status      LeadStatus @default(NOT_DELIVERED)
  assignedTo  String?
  agencyId    String
  pdfUrl      String?
  source      String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model LeadStatusHistory {
  id         String   @id @default(uuid())
  leadId     String
  oldStatus  LeadStatus
  newStatus  LeadStatus
  changedBy  String
  timestamp  DateTime @default(now())
}

model Route {
  id            String  @id @default(uuid())
  agentId       String
  startLocation String?
  leadOrder     Json
  createdAt     DateTime @default(now())
  completedAt   DateTime?
}

enum Role {
  founder
  admin
  agent
}

enum LeadStatus {
  CIRCLE_BACK
  SOLD
  NOT_DELIVERED
  DCID
}

model RefreshToken {
  id         String   @id @default(uuid())
  token      String   @unique
  userId     String
  revoked    Boolean  @default(false)
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  User       User     @relation(fields: [userId], references: [id])
}
